<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @* <link rel="stylesheet" href="~/lib/font-awesome/all.min.css" /> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        .footer {
            text-align: center;
            padding: 20px;
            font-size: 1rem;
            color: var(--primary-color);
            margin-top: 20px;
        }

        body{
            font-family: 'Poppins', sans-serif;
        }

        .img-fluid{
            max-height: 40px;
            max-width: 200px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-smm box-shadow mb-3 bg-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-action="Index">
                    <img src="/Images/Logo.png" alt="Task Management" class="img-fluid">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Tasks">
                                Tasks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Chats">
                                Chats
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- #region notification -->
                <div class="dropdown mx-3">
                    <button class="btn btn-light position-relative" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notificationCount">
                            0
                        </span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="notificationDropdown" style="width: 300px; max-height: 400px; overflow-y: auto;">
                        <div class="p-2 border-bottom d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Notifications</h6>
                            <button class="btn btn-sm text-primary" onclick="markAllAsRead()">
                                <i class="fas fa-check-double"></i> Mark all as read
                            </button>
                        </div>
                        <div id="notificationList" class="notification-list">
                            <!-- Notifications will be inserted here -->
                        </div>
                        <div class="p-2 border-top text-center">
                            <a href="#" class="text-decoration-none small">View All Notifications</a>
                        </div>
                    </div>
                </div>
                <!-- #endregion notification-->
                <!-- #region messages -->
                <div class="dropdown mx-3">
                    <button class="btn btn-light position-relative" type="button" id="messageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-envelope"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="messageCount">
                            0
                        </span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="messageDropdown" style="width: 300px; max-height: 400px; overflow-y: auto;">
                        <div class="p-2 border-bottom d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Messages</h6>
                            <a href="Chats" class="btn btn-sm text-primary">
                                <i class="fas fa-comments"></i> View All
                            </a>
                        </div>
                        <div id="messageList" class="message-list">
                            <!-- Messages will be inserted here -->
                        </div>
                    </div>
                </div>
                <!-- #endregion messages-->
                <div id="profileMenu">
                    <!-- Will be loaded dynamically-->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer">
            © 2025 TaskTrackPro - Keep Hustling! 🚀
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert.min.js"></script>
    <script src="~/lib/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
