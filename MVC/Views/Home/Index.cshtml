@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskTrackPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
            --primary-color: #133E87;
            --secondary-color: #608BC1;
            --accent-color: #CBDCEB;
            --background-color: #F3F3E0;
            --text-color: #333;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Poppins', sans-serif;
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--primary-color);
            padding: 15px;
        }

        .navbar-brand,
        .nav-link {
            color: black !important;
            font-weight: 600;
        }

        .hero {
            text-align: center;
            padding: 80px 20px;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            color: white;
            border-radius: 0 0 50px 50px;
            animation: fadeIn 1.5s ease-in-out;
        }

        .hero h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.2rem;
        }

        .btn-custom {
            background-color: white;
            color: var(--primary-color);
            font-weight: bold;
            padding: 12px 24px;
            border-radius: 30px;
            transition: all 0.3s ease-in-out;
        }

        .btn-custom:hover {
            background-color: var(--accent-color);
            color: var(--primary-color);
        }

        .features {
            text-align: center;
            padding: 80px 20px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
            padding: 20px;
            min-height: 250px;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card i {
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <div class="container">
        <section class="hero">
            <div class="container">
                <img src="/images/Logo2.png" alt="Task Management" class="img-fluid mb-3">
                <h1>Effortless Task Management</h1>
                <p>Boost your productivity with TaskTrackPro</p>
                <button class="btn btn-custom mt-3" onclick="location.href='/Auth/Login'">Get Started</button>
            </div>
        </section>

        <section class="features">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-stretch">
                        <div class="card p-4 text-center w-100">
                            <i class="fa-solid fa-chart-line"></i>
                            <h5>Intuitive Dashboard</h5>
                            <p>Manage tasks with ease using our user-friendly interface.</p>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-stretch">
                        <div class="card p-4 text-center w-100">
                            <i class="fa-solid fa-users"></i>
                            <h5>Collaborate Efficiently</h5>
                            <p>Seamlessly work with teams and track progress.</p>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-stretch">
                        <div class="card p-4 text-center w-100">
                            <i class="fa-solid fa-cogs"></i>
                            <h5>Customizable Workflows</h5>
                            <p>Tailor your task management experience to fit your needs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
